# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript files
[*.ts]
charset = utf-8
indent_size = 2

# HTML files
[*.html]
charset = utf-8
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2
